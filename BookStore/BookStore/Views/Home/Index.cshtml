@model BookStore.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>Thế Loại</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                @foreach (var item in Model.ListTheLoai)
                                {
                                    <li>@Html.ActionLink(item.tenTheLoaiCon, "ProductCategory", "Category", new { @id = item.maTheLoaiCon }, null)</li>

                                }
                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <a href="~/Views/Home/Index.cshtml">~/Views/Home/Index.cshtml</a>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/content/images/banners/banner1.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/content/images/banners/banner2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/content/images/banners/banner3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h5 class="bg-blue text-center text-white mb-0 p-2">Chủ Đề Thịnh Hành </h5>
                            @foreach (var item in Model.ListTheLoaiGoc.Take(3))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@Html.ActionLink(item.tenTheLoaiGoc, "ProductCategory", "Category", new { @id = item.maTheLoai }, null)</h6>
                                        <a href="#" class="btn btn-danger btn-sm"> Hot Search </a>
                                    </div>
                                    <img src="~/content/images/items/@item.tenAnh" height="80" class="img-bg">
                                </div>
                            }
                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Sản Phẩm Khuyến Mãi</h3>
                    <p>Kết thúc trong :</p>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n => n.khuyenMai != null).Take(5))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="#" class="img-wrap">
                                <img src="~/content/images/items/@item.tenAnh">
                            </a>
                            <div class="text-wrap p-3">
                                <a>@Html.ActionLink(item.tenSach, "Index", "Product", new { @id = item.maSach }, new { @class = "title" })</a><br>
                                <span class="badge badge-danger"> @item.khuyenMai % </span>
                            </div>
                        </figure>
                    </div> <!-- col.// -->
                }


            </div>
        </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">TIỂU THUYẾT</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Cuộc đời qua từng trang sách.</h5>
                        <p>Hiện nay tiểu thuyết rất phổ biến trên thế giới. Tùy theo từng nền văn hóa và lịch sử khác nhau mà mỗi đất nước có những cách định nghĩa và tìm hiểu tiểu thuyết khác nhau. Nhưng liệu đó là những câu chuyện họ đã trải qua hay chỉ là trí tưởng tượng. </p>

                        <a> @Html.ActionLink("Xem Thêm", "ProductCategory", "Category", new { @id = "TLC1" }, new { @class = "btn btn-outline-primary rounded-pill" })</a>
                        <img src="~/content/images/items/2.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.maTheLoai == "TLC1"))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="#" class="item">
                                    <div class="card-body">
                                        <h6>@Html.ActionLink(item.tenSach, "Index", "Product", new { @id = item.maSach }, new { @class = "title" })</h6>

                                        <img class="img-sm float-right" src="~/content/images/items/@item.tenAnh">
                                        <p class="text-muted"><i class="fa fa-pencil-alt"></i> @item.tacGia </p>
                                    </div>
                                </a>
                            </li>
                        }


                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Tâm Lý</h4>
        </header>

        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Khám phá tâm hồn, cảm xúc con người.</h5>
                        <p>Trong suốt thế kỷ qua, các nhà khoa học đã có những bước tiến vượt bậc trong lĩnh vực khoa học y tế, giúp chúng ta hiểu được hoạt động phức tạp bên trong cơ thể mình. Thế nhưng, tâm trí vẫn còn là một bí ẩn chưa được giải đáp. </p>
                        <a> @Html.ActionLink("Xem Thêm", "ProductCategory", "Category", new { @id = "TLC6" }, new { @class = "btn btn-outline-primary rounded-pill" })</a>
                        <img src="~/content/images/items/14.jpg" class="img-bg">
                    </div>

                </div> <!-- col.// -->

                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.maTheLoai == "TLC6"))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="#" class="item">
                                    <div class="card-body">
                                        <h6>@Html.ActionLink(item.tenSach, "Index", "Product", new { @id = item.maSach }, new { @class = "title" })</h6>
                                        <img class="img-sm float-right" src="~/content/images/items/@item.tenAnh">
                                        <p class="text-muted"><i class="fa fa-pencil-alt"></i> @item.tacGia</p>
                                    </div>
                                </a>
                            </li>
                            <!-- col.// -->
                        }



                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION ITEMS =============== -->
    <section class="padding-bottom-sm">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Sách Đề Cử</h4>
        </header>

        <div class="row row-sm">
            @foreach (var item in Model.ListProduct.Take(6))
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="#" class="card card-sm card-product-grid">
                        <a href="#" class="img-wrap"> <img src="~/content/images/items/@item.tenAnh"> </a>
                        <figcaption class="info-wrap">
                            <h6>@Html.ActionLink(item.tenSach, "Index", "Product", new { @id = item.maSach }, new { @class = "title" })</h6>
                            <div class="price mt-1">@(item.giaSach) VND</div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div> <!-- col.// -->
            }


        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION ITEMS .//END =============== -->
    <!-- =============== SECTION SERVICES =============== -->
    <section class="padding-bottom">

        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Dịch Vụ</h4>
        </header>

        <div class="row">
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/content/images/items/fahasa1.png" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Số lượng đầu sách phong phú</h6>
                        <p class="small text-uppercase text-muted">Mỗi khi có thông tin về một cuốn sách mới, bạn có thể tìm được ngay trên Fahasa.</p>
                    </div>
                </article> <!-- card.// -->
            </div> <!-- col.// -->
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/content/images/items/fahasa2.png" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Khuyến mãi ngập tràn</h6>
                        <p class="small text-uppercase text-muted">Fahasa thường xuyên có các chương trình giảm giá, khuyến mãi hấp dẫn.</p>
                    </div>
                </article> <!-- card.// -->
            </div> <!-- col.// -->
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/content/images/items/fahasa3.jpg" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Nhà sách FAHASA trên toàn quốc</h6>
                        <p class="small text-uppercase text-muted">Hệ thống hơn 120 nhà sách hân hạnh được phục vụ quý bạn đọc.</p>
                    </div>
                </article> <!-- card.// -->
            </div> <!-- col.// -->
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/content/images/items/fahasa4.png" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Giao hàng nhanh chóng</h6>
                        <p class="small text-uppercase text-muted">áp dụng hình thức vận chuyển nhanh giúp bạn nhận hàng một cách sớm nhất.</p>
                    </div>
                </article> <!-- card.// -->
            </div> <!-- col.// -->
        </div> <!-- row.// -->

    </section>
    <!-- =============== SECTION SERVICES .//END =============== -->
    <!-- =============== SECTION REGION =============== -->
