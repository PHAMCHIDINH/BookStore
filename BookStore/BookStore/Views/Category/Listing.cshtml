
@model BookStore.Models.HomeModel
@{
    ViewBag.Title = "Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


       

        <div class="row">
            @foreach (var item in Model.ListProduct)
            {
                <div class="col-md-3">
                    <figure class="card card-product-grid">
                        <div class="img-wrap">
                            
                            <img src="~/content/images/items/@item.tenAnh">
                        </div> <!-- img-wrap.// -->
                        <figcaption class="info-wrap">
                            <h5>@Html.ActionLink(item.tenSach, "Index", "Product", new { @id = item.maSach }, new { @class = "title" })</h5>
                            <p class="text-muted ">Tác Giả: @item.tacGia</p>
                            <p class="text-muted ">Năm Xuất Bản: @item.ngayXuatBan</p>
                            <div class="price-wrap">
                                <span class="price">@item.giaSach VND </span>
                            </div> <!-- price-wrap.// -->
                            <hr />
                            <a href="#" class="btn btn-outline-primary"> <i class="fa fa-shopping-cart"></i> Thêm Vào Giỏ Hàng</a>

                        </figcaption>
                    </figure>
                </div> <!-- col.// -->
            }
        </div> <!-- row end.// -->


        <nav class="mb-4" aria-label="Page navigation sample">
            <ul class="pagination">
                <li class="page-item disabled"><a class="page-link" href="#"><i class="fa fa-chevron-left "></i></a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#"><i class="fa fa-chevron-right "></i></a></li>
            </ul>
        </nav>


       

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
